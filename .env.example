# ConnectFlow Messenger - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Client URL (for CORS - change to your frontend URL in production)
CLIENT_URL=http://localhost:3000

# Database (optional - uses NeDB by default)
# DATABASE_URL=postgresql://user:password@localhost:5432/connectflow

# Redis (optional - for session management)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
